	\MakeUppercase{\insertshortauthor}\qquad
	\usebeamerfont{title in head/foot}\itshape {\tiny\inserttitle}
	\hfill
	\hbox{
			\raggedright{ {\large\bfseries\insertframenumber}/\inserttotalframenumber}
		}
	\end{beamercolorbox}%

	\fi
	
}

     
